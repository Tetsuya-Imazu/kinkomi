<div class="center-contents">
  <div class="center-header">
    <a href="/users/<%= @post.user.id %>">
      <p><%= @post.user.nickname %>さん</p>
    </a>
  </div>
  <div class="post-space">
    <div class="posts">
      <p>トレーニング名: <%= @post.name %></p>
      <p>説明: <%= @post.description %></p>
      <p>カテゴリー: <%= @post.category.name %></p>
      <div class="like-btn">
        <% if current_user.already_liked?(@post) %>
          <%= button_to 'いいねを取り消す', post_like_path(@post), method: :delete %>
        <% else %>
          <%= button_to 'いいね!', post_likes_path(@post) %>
        <% end %>
      </div>
      <div class="video-space">
        <p>
          <%= video_tag @post.video.to_s, loop: true, controls: true, :playsinline => 'true', class: "video embed-responsive-post" %>
        </p>
      </div>
    </div>
    <% if user_signed_in? && current_user.id == @post.user_id %>
      <div class="more">
        <div class="edit-btn">
          <%= link_to '編集', edit_post_path(@post.id), method: :get %>
        </div>
        <div class="delete-btn">
          <%= link_to '削除', post_path(@post.id), method: :delete %>
        </div>
      </div>
    <% end %>
    <h2>いいね!したユーザー</h2>
    <% @post.liked_users.each do |user| %>
      <li><%= user.nickname %></li>
    <% end %>
  </div>
</div>
<div class="right-bar">
  <div class="right-header">
    <h2>コメント</h2>
  </div>
  <div class="messages">
    <div class="message">
      <% if @comments %>
        <% @comments.each do |comment| %>
          <p>
            <strong><%= link_to comment.user.nickname, "/uesrs/#{comment.user_id}" %>:</strong>
            <%= comment.text %>
          </p>
        <% end %>
      <% end %>
    </div>
  </div>
    <%= form_with(model: [@post, @comment], local: true) do |form| %>
      <div class="form">
        <div class="form-input">
          <div class="form-message">
            <%= form.text_field :text, placeholder: "コメント", rows: "2" %>
          </div>
        </div>
        <div class="form-submit">
          <%= form.submit "送信" %>
        </div>
      </div>
    <% end %>
</div>
