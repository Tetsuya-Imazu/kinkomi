<!DOCTYPE html>
<html>
  <head>
    <title>KinKomi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/3.18.1/build/cssreset/cssreset-min.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="wrapper">
      <div class="left-bar">
        <div class="left-header">
          <%= link_to '筋コミ', '/' %>
          <p>初心者のための筋トレコミュニティ</p>
        </div>
        <% if user_signed_in? %>
          <div class="user-nickname">
            <span id="user-lists"><%= current_user.nickname %></span>
          </div>
          <div class="post-new">
            <%= link_to '投稿する', '/posts/new', class: 'post' %>
          </div>
          <ul class="user-info hidden" id="user-pull-down">
            <li><%= link_to 'マイページ', "/users/#{current_user.id}" %></li>
            <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
          </ul>
        <% else %>
          <div class="login-bar">
            <h2>
              <%= link_to 'ログイン', new_user_session_path, class: 'post' %>
            </h2>
          </div>
          <div class="user-new">
            <h2>
              <%= link_to 'サインアップ', new_user_registration_path, class: 'post' %>
            </h2>
          </div>
        <% end %>
        <div class="menu-day">
          <p>
            <%= link_to '#胸の日', chest_path, class: 'chest' %>
          </p>
          <p>
            <%= link_to '#背中の日', back_path, class: 'back' %>
          </p>
          <p>
            <%= link_to '#肩の日', shoulder_path, class: 'shoulder' %>
          </p>
          <p>
            <%= link_to '#腕の日', arm_path, class: 'arm' %>
          </p>
          <p>
            <%= link_to '#脚の日', leg_path, class: 'leg' %>
          </p>
          <p>
            <%= link_to '#腹筋の日', abs_path, class: 'abs' %>
          </p>
        </div>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
