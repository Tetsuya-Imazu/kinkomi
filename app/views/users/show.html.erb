<div class="center-contents-index">
  <div class="center-header"><%= @nickname%>さんの投稿一覧</div>
  <div class="post-space-index">
    <% @posts.each do |post| %>
      <div class="posts">
        <div class="weight-bold-text-index">
          <%= post.user.nickname %>
        </div>
        <p class="training-name">トレーニング名: <%= post.name %></p>
        <%= link_to '', post_path(post.id), method: :get %>
        <div class="video-space">
          <p>
            <%= video_tag post.video.to_s, loop: true, controls: true, :playsinline => 'true', class: "video embed-responsive-post" %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="right-bar-user-show">
  <div class="right-header">
    <h2>いいね!した投稿</h2>
  </div>
  <div class="like-space">
    <% @user.liked_posts.each do |post| %>
      <div class="like-contents">
        <div class="like-user-nickname">
          <%= post.user.nickname %>: 
        </div>
        <span><%= post.name %></span>
      </div>
    <% end %>
  </div>
</div>
