<div class="center-contents-user">
  <div class="post-space">
   <div class="center-header">サインイン</div>
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">メールアドレス</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class:"input-default", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password, class:"input-default", placeholder:"6文字以上の半角英数字" %>
      </div>

      <div class='login-btn'>
        <%= f.submit "サインイン" ,class:"login-red-btn" %>
      </div>
    <% end %>
  </div>
</div>